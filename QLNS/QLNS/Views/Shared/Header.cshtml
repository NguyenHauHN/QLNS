@model QLNS.Common.UserLogin
<header class="main-header">
    <!-- Logo -->
    <a href="" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>QLNS</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>QLNS</b></span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @if (!string.IsNullOrEmpty(Model.Avatar))
                        {
                            <img src="@Url.Content(Model.Avatar)" class="user-image" alt="@Model.Username">
                        }
                        else
                        {
                            <img src="@Url.Content("~/Images/user.png")" class="user-image" alt="@Model.Username">
                        }

                        <span class="hidden-xs">@Model.Username</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            @if (!string.IsNullOrEmpty(Model.Avatar))
                            {
                                <img src="@Url.Content(Model.Avatar)"  class="img-circle" alt="@Model.Username">
                            }
                            else
                            {
                                <img src="@Url.Content("~/Images/user.png")"  class="img-circle" alt="@Model.Username">
                            }
                            <p>
                                @Model.Username - Quản trị viên
                                
                            </p>
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="/Admin/ChangePassword" class="btn btn-default btn-flat">Đổi mật khẩu</a>
                            </div>
                            <div class="pull-right">
                                <a href="/Home/LogOut" class="btn btn-default btn-flat">Đăng xuất</a>
                            </div>
                        </li>
                    </ul>
                </li>
               
            </ul>
        </div>
    </nav>
</header>
