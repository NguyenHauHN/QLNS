@model QLNS.Common.UserLogin

<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
        <!-- Sidebar user panel -->
        <div class="user-panel">
            <div class="pull-left image">
                @if (Model.Avatar != null)
                {
                    <img src="@Url.Content(Model.Avatar)" class="img-circle" alt="@Model.Username">
                }
                else
                {
                    <img src=@Url.Content("~/Images/user.png") class="img-circle" alt="@Model.Username">
                }

            </div>
            <div class="pull-left info">
                <p>@Model.Username</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        
        <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
                <a href="/Admin">
                    <i class="fa fa-user-md"></i> <span>Quản lý Quản trị viên</span>
                </a>
            </li>

            <li class="treeview">
                <a href="/Employee">
                    <i class="fa fa-user"></i> <span>Quản lý Nhân viên</span>
                </a>
            </li>

            <li class="treeview">
                <a href="/Department">
                    <i class="fa fa-building"></i> <span>Quản lý Phòng ban</span>
                </a>
            </li>

        </ul>
    </section>
    <!-- /.sidebar -->
</aside>
