@model Model.ViewModel.DepartmentViewModel
@{
    ViewBag.Title = "Cập nhật thông tin Phòng ban - Quản lý nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb {
    <section class="content-header">
        <h4>Quản lý Phòng ban</h4>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/Department/Index">Quản lý Phòng ban</a></li>
            <li class="active">Cập nhật</li>
        </ol>
    </section>
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Thông tin Phòng ban</h3>
        </div>
        @using (Html.BeginForm("Edit", "Department", FormMethod.Post))
            {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="box-body ">

                <div class="row">
                    <div class="col-lg-6">
                        <input type="hidden" name="saveIDDepartment" value="@Model.DepartmentData.ID" />
                        <div class="form-group">
                            <label>Mã phòng ban</label>
                            @Html.EditorFor(model => model.DepartmentData.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã phòng ban", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.DepartmentData.Code, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Tên phòng ban</label>
                            @Html.EditorFor(model => model.DepartmentData.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên phòng ban", @autofocus = "autofocus" } })
                            @Html.ValidationMessageFor(model => model.DepartmentData.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.EditorFor(model => model.DepartmentData.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Địa chỉ" } })
                            @Html.ValidationMessageFor(model => model.DepartmentData.Address, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.EditorFor(model => model.DepartmentData.Phone, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số điện thoại" } })
                            @Html.ValidationMessageFor(model => model.DepartmentData.Phone, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Số lượng nhân viên</label>
                            @Html.EditorFor(model => model.AmountEmployee, new { htmlAttributes = new { @class = "form-control", @placeholder = "Số lượng nhân viên", @type = "number", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.AmountEmployee, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <div class="row col-lg-12">
                                <div class="radio col-lg-5">
                                    @Html.RadioButtonFor(model => model.DepartmentData.Status, "1", new { @checked = true })
                                    @Html.Label("Hoạt động")

                                </div>
                                <div class="radio col-lg-5 radio-second">
                                    @Html.RadioButtonFor(model => model.DepartmentData.Status, "0", false)
                                    @Html.Label("Đã khóa")
                                </div>
                            </div>
                        </div>


                    </div>

                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-primary pull-right">Cập nhật</button>
            </div>
        }
    </div>
</section>



