@model QLNS.Common.UserLogin
@{
    ViewBag.Title = "Thay đổi mật khẩu - Quản lý nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section breadcrumb {
    <section class="content-header">
        <h4>Đổi mật khẩu</h4>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Đổi mật khẩu</li>
        </ol>
    </section>
}
<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Nhập các thông tin</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <div class="box-body ">
            @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text text-danger" })
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên đăng nhập", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Mật khẩu hiện tại</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật khẩu hiện tại", @readonly = "readonly", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <label>Mật khẩu mới</label>
                    <input type="password" class="form-control" placeholder="Mật khẩu mới" name="newPassword" autofocus>
                </div>
                <div class="form-group has-feedback">
                    <label>Nhập lại mật khẩu mới</label>
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" name="reNewPassword">
                </div>



                <div>
                    <button type="submit" class="btn btn-primary btn-flat pull-right">Lưu</button>
                    <!-- /.col -->
                </div>
            }
            <div class="clearfix"></div>

            @if (ViewBag.Err != null)
            {
                <div class="alert alert-danger alert-dismissible alert-custom center-block">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-ban"></i> Thông báo!</h4>
                    <p>@ViewBag.Err</p>
                </div>
            }

            @if (ViewBag.Success != null)
            {
                <div class="alert alert-success alert-dismissible alert-custom center-block">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h4><i class="icon fa fa-check"></i> Thông báo!</h4>
                    <p>@ViewBag.Success</p>
                </div>
            }
        </div>


        <!-- /.box-body -->


    </div>
</section>
