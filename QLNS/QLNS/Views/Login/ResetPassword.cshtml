@model Model.EF.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Quên mật khẩu - Quản lý nhân sự</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="/Assets//bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/ionicons.css" rel="stylesheet" />
    <!-- Theme style -->
    <link rel="stylesheet" href="/Assets//dist/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="/Assets//plugins/iCheck/square/blue.css">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href=""><b>QLNS</b></a>
        </div>
        <div class="register-box-body">
            <p class="login-box-msg">Nhập các thông tin</p>
            @using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text text-danger" })
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Username", @autofocus = "autofocus" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Email" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text text-danger" })
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Mật khẩu mới" name="newPassword">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" name="reNewPassword">
                    <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
                </div>
                if (ViewBag.Err != null)
                {
                    <div class="row">
                        <p class="text-center text-danger">@ViewBag.Err</p>
                    </div>
                }

                if (ViewBag.Success != null)
                {
                    <div class="row">
                        <p class="text-center text-success">@ViewBag.Success</p>
                    </div>
                }
                <a href="/Login/Index">Login</a><br>
                <div class="row">
                    <div class="col-xs-8">
                       
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Register</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
           
        </div>
        <!-- /.form-box -->
    </div>
    <!-- /.register-box -->
    <!-- jQuery 2.2.3 -->
    <script src="/Assets//plugins/jQuery/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="/Assets//bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="/Assets//plugins/iCheck/icheck.min.js"></script>
    <script>
  $(function () {
    $('input').iCheck({
      checkboxClass: 'icheckbox_square-blue',
      radioClass: 'iradio_square-blue',
      increaseArea: '20%' // optional
    });
  });
    </script>
</body>
</html>

